<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="Notification">
        <SwitchPreference
            android:defaultValue="true"
            android:key="allow_notification"
            android:title="Allow Notification" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Theme">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="theme_system"
            android:title="System Theme" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="theme_light"
            android:title="Light Theme" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="theme_dark"
            android:title="Dark Theme" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Language">
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="lang_english"
            android:title="English" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="lang_vietnamese"
            android:title="Vietnamese" />
    </PreferenceCategory>
</PreferenceScreen>